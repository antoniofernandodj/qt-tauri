<!-- EXEMPLO 3: Splitters Aninhados (Layout IDE-like) -->
<QSplitter
  orientation="horizontal"
  [style]="'height: 800px;'"
>
  
  <!-- Left right -->
  <QSplitterPane
    [initialSize]="20"
    [minSize]="15"
    [maxSize]="40"
  >
    <div class="properties">
      <h3>Properties</h3>
      <ul>
        <li>Width: 100%</li>
        <li>Height: auto</li>
        <li>Display: flex</li>
      </ul>
    </div>
  </QSplitterPane>
  
  <!-- Main area with vertical split -->
  <QSplitterPane
    [initialSize]="60"
  >
    <QSplitter
      [orientation]="'vertical'"
    >
  
      <QSplitterPane
        [initialSize]="70"
        [minSize]="30"
      >
        <div class="editor">
          <h3>Code Editor</h3>
          <pre>
            <code>
              function hello() [
                console.log("Hello World");
              ]
              
          </code>
        </pre>
        </div>
      </QSplitterPane>
  
      <QSplitterPane
        [initialSize]="30"
        [minSize]="20"
      >
        <div class="terminal">
          <h3>Terminal</h3>
          <p>$ npm start</p>
          <p>Server running on port 4200...</p>
        </div>
      </QSplitterPane>
      
    </QSplitter>
  </QSplitterPane>

  <QSplitterPane
    [initialSize]="20"
    [minSize]="15"
    [maxSize]="40"
  >
    <div class="file-explorer">
      <h3>File Explorer</h3>
      <ul>
        <li>üìÅ src</li>
        <li>üìÅ components</li>
        <li>üìÅ services</li>
      </ul>
    </div>
  </QSplitterPane>

  
</QSplitter>


